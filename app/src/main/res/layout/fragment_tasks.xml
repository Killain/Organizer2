<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/parent_layout_tasks_fragment"
        android:clickable="true"
        android:background="@color/tasksFragmentBackground"
        android:focusable="true"
        android:visibility="visible"
        tools:context="com.killain.organizer.packages.fragments.TasksFragment">

    <TextView
        android:id="@+id/no_task_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="There're no tasks today ;)"
        android:visibility="gone"
        android:textSize="30sp" />

    <ScrollView
        android:id="@+id/tasks_frg_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_fragment_tasks"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="75dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:visibility="visible"
                app:layoutManager="android.support.v7.widget.LinearLayoutManager"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/tasks_frg_horizontal_line_top"
                android:layout_width="20dp"
                android:layout_height="1dp"
                android:layout_alignStart="@+id/tasks_frg_today"
                android:layout_marginStart="8dp"
                android:layout_marginTop="38dp"
                android:layout_marginEnd="8dp"
                android:background="@color/colorGrey"
                android:visibility="gone"
                app:layout_constraintEnd_toStartOf="@+id/tasks_frg_today"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <View
                android:id="@+id/tasks_frg_vertical_line"
                android:layout_width="1dp"
                android:layout_height="329dp"
                android:layout_below="@+id/tasks_frg_horizontal_line_top"
                android:layout_marginStart="8dp"
                android:background="@color/colorGrey"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tasks_frg_horizontal_line_top" />

            <com.killain.organizer.packages.views.HeaderTextView
                android:id="@+id/tasks_frg_today"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="38dp"
                android:layout_marginTop="24dp"
                android:text="Today, 9 Jan"
                android:textColor="#424242"
                android:textSize="24sp"
                android:visibility="visible"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.killain.organizer.packages.views.HeaderTextView
                android:id="@+id/tasks_frg_tomorrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/recycler_fragment_tasks"
                android:layout_marginStart="38dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="8dp"
                android:text="Tomorrow, 10 Jan"
                android:textColor="#424242"
                android:textSize="24sp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/recycler_fragment_tasks" />

        </android.support.constraint.ConstraintLayout>

    </ScrollView>

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.github.clans.fab.FloatingActionMenu
            android:id="@+id/fam_tasks"
            app:menu_fab_size="normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            app:menu_labels_position="left"
            app:menu_colorNormal="@color/colorAccentDark"
            android:layout_margin="@dimen/fab_margin">

            <com.github.clans.fab.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fab_simple_task"
                app:fab_size="mini"
                app:fab_label="Add simple task"
                android:src="@drawable/ic_add"
                tools:ignore="VectorDrawableCompat"/>

            <com.github.clans.fab.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fab_big_task"
                app:fab_size="mini"
                app:fab_label="Add big task"
                android:src="@drawable/ic_add"
                tools:ignore="VectorDrawableCompat"/>

        </com.github.clans.fab.FloatingActionMenu>

    </android.support.design.widget.CoordinatorLayout>

    </RelativeLayout>

</FrameLayout>
